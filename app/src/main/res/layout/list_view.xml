<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_1"
        android:layout_marginRight="@dimen/margin_1"
        android:layout_marginTop="@dimen/margin_0"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/capa4">

            <ImageView
                android:id="@+id/image_view"
                android:layout_width="@dimen/dim_1"
                android:layout_height="@dimen/dim_1"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/margin_2"
                android:layout_marginEnd="@dimen/margin_10"
                android:src="@drawable/ic_directions_car_black_24dp" />

            <TextView
                android:id="@+id/text_model"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/margin_1"
                android:layout_marginEnd="@dimen/margin_9"
                android:text="@string/dummy"
                android:textSize="@dimen/text_size_1" />

            <TextView
                android:id="@+id/text_km"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/text_model"
                android:layout_marginEnd="@dimen/margin_9"
                android:text="@string/dummy"
                android:textSize="@dimen/text_size_1" />

            <TextView
                android:id="@+id/text_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/text_km"
                android:layout_marginEnd="@dimen/margin_9"
                android:text="@string/dummy"
                android:textSize="@dimen/text_size_1" />

            <TextView
                android:id="@+id/text_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_price"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/margin_9"
                android:text="@string/dummy"
                android:textSize="@dimen/text_size_1" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>